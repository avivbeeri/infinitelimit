extends main.pug

block content
  for article in docs.results 
    .menuitem
      a(href!="/article/"+article.uid)
        img.menu-thumbnail(src=article.getImage('article.thumbnail').url)
      div(style='menu-text')
        a(href!="/article/"+article.uid)
          h1= article.getStructuredText('article.title').asText()
        - var category = article.getLink('article.category');
        if category
          h4 Category / #{category.getText('category.title')}
        p= article.getStructuredText('article.description').asText()
